#!/usr/bin/env bash
#Creates the file /var/run/myscript.pid containing its PID
file="/var/run/myscript.pid"
echo $$ > "$file"

#Displays "To infinity and beyond"
while true; do
	echo "To infinity and beyond"
	sleep 2
done &

#Handle signals
trap 'echo "I hate the kill command"; exit' SIGTERM
trap 'echo "Y U no love me?!"; exit' SIGIN
trap 'rm "$file"; exit' SIGQUIT SIGTERM
